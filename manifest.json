{
    "manifest_version": 2,
    "name": "深圳天气",
    "version": "1.0",
    "description": "来自深圳气象台自动站实时数据",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "深圳天气",
        "default_popup": "popup.html"
    },
    "permissions": [
        "http://www.szmb.gov.cn/*"
    ]    
}